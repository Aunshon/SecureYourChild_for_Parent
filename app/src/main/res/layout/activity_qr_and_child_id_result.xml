<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="25dp"
    tools:context=".QrAndChildIdResult">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child Name"
        />
    <TextView
        android:id="@+id/resultname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Child Name"
        android:textSize="20dp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child Phone"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/resultphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Child Phone"
        android:textSize="20dp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child Age"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/resultage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Child Age"
        android:textSize="20dp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/okBtnOfChildAdd"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:onClick="ChildAddBtnClick"
        android:text="add" />
</LinearLayout>